{
  "compilerOptions": {
    "types": ["react", "node"],
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "outDir": "./build/",
    "noEmit": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "lib": ["es2015", "dom"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "scripts", "webpack", "jest"]
}
