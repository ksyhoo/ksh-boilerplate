{
  "compilerOptions": {
    "types": ["react"],
    "baseUrl": "./",
    "outDir": "./build/",
    "noEmit": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "jsx": "preserve",
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack",
    "jest",
  ]
}

